<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nyatapola_statue"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        />

    <!--<ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uncharted_airplane"
        android:src="@drawable/uncharted_airplane" />-->


    <Button
        android:text="Start a New Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:id="@+id/newGame"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="You won!"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/winText"
        android:layout_above="@+id/newGame"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="179dp"
        android:textSize="32sp"
        android:shadowColor="#000000"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="2.0"/>

    <TextView
        android:text="You lost."
        android:textColor="#ffffff"
        android:textStyle="bold"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/loseText"
        android:layout_alignBaseline="@+id/winText"
        android:layout_alignBottom="@+id/winText"
        android:layout_alignEnd="@+id/winText"
        android:textSize="32sp"

        android:shadowColor="#000000"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="2.0"/>

    <TextView
        android:text="BatteryText"
        android:textColor="#ffffff"
        android:textStyle="bold"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/batteryText"
        android:gravity="center"
        android:layout_below="@+id/pathlengthText"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"

        android:shadowColor="#000000"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="2.0"/>


    <TextView
        android:text="PathText"
        android:textColor="#ffffff"
        android:textStyle="bold"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pathlengthText"
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:layout_alignTop="@+id/winText"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:shadowColor="#000000"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="2.0"/>

</RelativeLayout>